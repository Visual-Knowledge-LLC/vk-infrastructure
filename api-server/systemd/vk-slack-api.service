[Unit]
Description=VK Slack API Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/vk-slack-api
EnvironmentFile=/home/ubuntu/vk-slack-api/.env
ExecStart=/usr/bin/python3 /home/ubuntu/vk-slack-api/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target